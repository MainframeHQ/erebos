{
  "name": "erebos-browser",
  "version": "0.3.0",
  "description": "Ethereum and Swarm client for browser",
  "repository": "git@github.com:MainframeHQ/erebos.git",
  "main": "cjs/index.js",
  "module": "esm/index.js",
  "browser": "umd/erebos.js",
  "author": "Mainframe",
  "license": "MIT",
  "files": [
    "cjs/*",
    "esm/*",
    "umd/*"
  ],
  "scripts": {
    "clean": "del cjs esm umd",
    "build:cjs": "BABEL_ENV='browser-cjs' babel src --out-dir cjs",
    "build:esm": "BABEL_ENV='browser-esm' babel src --out-dir esm",
    "build:umd": "BABEL_ENV='browser-esm' yarn webpack",
    "build:js": "yarn build:cjs && yarn build:esm && yarn build:umd",
    "build:flow": "flow-copy-source src cjs && flow-copy-source src esm",
    "build": "yarn clean && yarn build:js && yarn build:flow",
    "prepublishOnly": "yarn build"
  },
  "dependencies": {
    "@mainframe/rpc-browser": "^0.2.1",
    "@mainframe/utils-hex": "^0.1.1",
    "erebos-api-bzz-browser": "^0.3.0",
    "erebos-api-eth": "^0.3.0",
    "erebos-api-net": "^0.3.0",
    "erebos-api-pss": "^0.3.0",
    "erebos-api-shh": "^0.3.0",
    "erebos-api-web3": "^0.3.0",
    "erebos-client-base": "^0.3.0",
    "rxjs": "^6.2.2"
  },
  "devDependencies": {
    "babel-loader": "^7.1.5",
    "babel-plugin-external-helpers": "^6.22.0",
    "webpack": "^4.16.5",
    "webpack-cli": "^3.1.0"
  }
}
